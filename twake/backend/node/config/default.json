{
  "services": ["auth", "user", "channels", "webserver", "websocket", "orm"],
  "webserver": {
    "port": 3000,
    "logger": {
      "level": "info"
    },
    "cors": {
      "origin": "*"
    }
  },
  "websocket": {
    "path": "/ws",
    "adapters": {
      "types": [],
      "redis": {
        "host": "redis",
        "port": 6379
      }
    }
  },
  "auth": {
    "jwt": {
      "secret": "supersecret"
    }
  },
  "orm": {
    "connection": {
      "type": "mongodb",
      "host": "localhost",
      "port": 27017,
      "database": "test",
      "logging": true
    }
  }
}
