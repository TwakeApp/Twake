{
  "name": "@twake/twake-backend",
  "version": "1.0.0",
  "description": "Twake backend",
  "scripts": {
    "build": "npm run clean-dist && npm run build-ts && npm run copy-assets",
    "build-ts": "tsc",
    "clean-dist": "rimraf ./dist",
    "copy-assets": "npm run copy-config",
    "copy-config": "cp -R config dist",
    "lint": "eslint . --ext .ts --quiet --fix",
    "serve": "node dist/server.js",
    "serve-debug": "nodemon --inspect dist/server.js",
    "start": "npm run serve",
    "test": "jest --forceExit --coverage --verbose --detectOpenHandles",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-node": "nodemon dist/server.js",
    "watch-test": "npm run test -- --watchAll",
    "watch-ts": "tsc -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TwakeApp/twake-backend.git"
  },
  "author": "Twake",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/TwakeApp/twake-backend/issues"
  },
  "homepage": "https://github.com/TwakeApp/twake-backend#readme",
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@types/chai": "^4.2.12",
    "@types/config": "0.0.36",
    "@types/eslint": "^7.2.3",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.2",
    "@types/pino": "^6.3.2",
    "@types/socket.io": "^2.1.11",
    "@types/socket.io-redis": "^1.0.26",
    "@types/supertest": "2.0.4",
    "@types/ws": "^7.2.7",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "babel-jest": "^26.5.2",
    "chai": "^4.2.0",
    "concurrently": "5.3.0",
    "eslint": "^7.10.0",
    "jest": "^26.4.2",
    "nodemon": "2.0.4",
    "rimraf": "^3.0.2",
    "supertest": "4.0.2",
    "ts-jest": "^26.4.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "config": "^3.3.2",
    "fastify": "3.4.1",
    "fastify-jwt": "^2.1.3",
    "fastify-plugin": "^2.3.4",
    "fastify-sensible": "^3.0.1",
    "fastify-websocket": "^2.0.7",
    "mongodb": "^3.6.2",
    "pino": "^6.6.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.3",
    "socket.io": "^2.3.0",
    "socket.io-redis": "^5.4.0",
    "typeorm": "^0.2.28"
  }
}
