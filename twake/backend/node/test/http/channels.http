@company_id = 0
@workspace_id = 0
@baseURL = http://localhost:3000/api/channels/companies/{{company_id}}/workspaces/{{workspace_id}}

# @name login
GET {{baseURL}}/auth/login

### List channels

@authToken = {{login.response.body.token}}
GET {{baseURL}}/channels
Content-Type: application/json
Authorization: Bearer {{authToken}}

### Create a channel

# @name createChannel
POST {{baseURL}}/channels
Content-Type: application/json
Authorization: Bearer {{authToken}}

{
  "name": "My channel"
}

### Get a single channel

@getId = {{createChannel.response.body.resource.id}}

GET {{baseURL}}/channels/{{getId}}


### Delete a channel

@deleteId = {{createChannel.response.body.resource.id}}

DELETE {{baseURL}}/channels/{{deleteId}}
