@baseURL = http://localhost:3000/api

# @name login
GET {{baseURL}}/auth/login

### List channels

@authToken = {{login.response.body.token}}
GET {{baseURL}}/channels
Content-Type: application/json
Authorization: Bearer {{authToken}}

### Create a channel

# @name createChannel
POST {{baseURL}}/channels
Content-Type: application/json
Authorization: Bearer {{authToken}}

{
  "name": "My channel",
  "creator": "111"
}

### Get a single channel

@getId = {{createChannel.response.body.id}}

GET {{baseURL}}/channels/{{getId}}


### Delete a channel

@deleteId = {{createChannel.response.body.id}}

DELETE {{baseURL}}/channels/{{deleteId}}
